
<br><br>
<% @shops.each do |shop| %>
<div class="col-lg-12">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li><%= link_to shop.name, shop_path(shop) %></li>
      <li id="desc"><%= shop.description %></li>
      <li id="location"><%= shop.location %></li>
      <% if current_user %>
        <% if policy(shop).edit? %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shop_path(shop), :class => 'btn btn-default btn-xs' %>
        <% end %>
        <% if policy(shop).destroy? %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shop_path(shop),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
          <% end %>
        <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->
<% end %>

<p style="padding-left:15px;">
    <%= link_to ('Open a New Shop'), new_shop_path(@shop), :class => 'btn btn-main' %>
</p>
