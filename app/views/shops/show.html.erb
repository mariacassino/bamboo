<h1><%= @shop.name %></h1>
<li><%= form_tag import_shops_path, multipart: true do %>
  <%= hidden_field_tag :shop_id, @shop.id %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %></li>
  <% end %>
<br><br>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_shop_item_path(@shop),
              :class => 'btn btn-primary' %>

<br><br>

  <% @items.each do |item| %>
  <div class="well">
    <ul>
      <li><%=link_to item.name, shop_item_path(@shop, item.id) %></li>
      <li><%= item.description %></li>
      <% # TODO need to pass local variables to partial %>
      <%= render partial: 'shops/stripe_button', locals: { item: item, shop: @shop }%>
    </ul>
  </div><!--/.well -->

<% end %>
