<%= @shop.name %>
<li><%= form_tag import_shops_path, multipart: true do %>
  <%= hidden_field_tag :shop_id, @shop.id %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %></li>
<br><br>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_shop_item_path(@shop),
              :class => 'btn btn-primary' %>

<br><br>
<% @items.each do |item| %>
<div class="col-lg-3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li><%=link_to item.name, shop_item_path(@shop, item.id) %></li>
      <li><%= item.description %></li>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_shop_item_path(@shop, item.id), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    shop_item_path(@shop, item.id),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>


      <% end %>
    </ul>
  </div><!--/.well -->
</div><!--/span-->
<% end %>
