<%= @shop.name %>
<li><%= form_tag import_shops_path, multipart: true do %>
  <%= hidden_field_tag :shop_id, @shop.id %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %></li>
  <% end %>
<br><br>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_shop_item_path(@shop),
              :class => 'btn btn-primary' %>

<br><br>
<div class="col-lg-3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <% @items.each do |item| %>
      <li><%=link_to item.name, shop_item_path(@shop, item.id) %></li>
      <li><%= item.description %></li>




    </ul>
  </div><!--/.well -->
  <% # TODO need to pass local variables to partial %>
  <%= render partial: 'shops/stripe_button', locals: { item: item }%>
</div><!--/span-->
<% end %>
