<div class="col-lg-3">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <%= image_tag @item.image.url(:medium) %>
      <li><%= @item.name %></li>
      <li><%= @item.description %></li>
      <li><%= @item.price %></li>


      <% if @item.on_sale = true %>
        <li><%= "Sale Price: " + @item.sale_price.to_s %></li>
        <li><%= "Sale Ends: " + @end_date.to_s %></li>
      <% end %>

      <% if current_user %>
        <% if policy(@item).edit? %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_shop_item_path(@item, @shop), :class => 'btn btn-default btn-xs' %>
        <% end %>
        <% if policy(@item).destroy? %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          shop_item_path(@item, @shop),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-xs btn-danger' %>
        <% end %>
      <% end %>

    <% if current_user %>
      <% if policy(@item).edit? %>
        <% if @item.on_sale = false %>
          <h3><%= link_to "Put this item on sale to get it flying off the shelves!", shop_item_new_sale_path(@shop, @item) %></h3>
        <% else %>
          <h3><%= link_to "Edit Sale Info", shop_item_new_sale_path(@shop, @item) %></h3>
        <% end %>
      <% end %>
    <% end %>

    </ul>
  </div><!--/.well -->
</div><!--/span-->




<div id="myDIV" class="header">
  <h2>Reviews</h2>
  <input type="text" id="myInput" placeholder="Tell us what you think!...">
  <span onclick="newElement()" class="addBtn">Add Review</span>
</div>

<ul id="myUL">

</ul>




<p style="padding-left:15px;">
  <%= link_to shop_path(@shop), class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> Return to Shop
  <% end %>
</p>
